<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.life.xu.communityx.dao.QuestionDao">

    <select id="findCount" resultType="int">
        select count(1) from question
        <where>
            <if test="creator != null">
                and creator = #{creator}
            </if>
        </where>
    </select>
    <select id="findPage" resultType="com.life.xu.communityx.model.Question">
        select * from question
        <where>
            <if test="parMap.creator != null">
                and creator = #{parMap.creator}
            </if>
        </where>
        limit #{offPage},#{pageSize}
    </select>
</mapper>